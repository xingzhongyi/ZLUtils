<?xml version="1.0" encoding="utf-8"?>
<!--自定义颜色的进度条-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（白色）  -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <solid android:color="@color/download_progress_bar_noSelect_color" />
        </shape>
    </item>
    <!--  设置进度条颜色（蓝色）  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <solid android:color="@color/download_progress_bar_select_color" />
            </shape>
        </clip>
    </item>
</layer-list>